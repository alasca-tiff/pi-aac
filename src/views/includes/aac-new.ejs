<%- include('head') %>
<%- include('../nav-admin') %>

<div class="full-screen aac-content">
  <div class="container-fluid">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/aac">Atividades Acadêmicas Complementares</a></li>
        <%if(!aacId._id) {%>
          <li class="breadcrumb-item active" aria-current="page">Criar Atividade</li>
        <%} else {%>
          <li class="breadcrumb-item active" aria-current="page">Editar Atividade</li>
        <%}%>
      </ol>
    </nav>
    <div class="card">
      <%- include('messages') %>
      <div class="card-body">
        <%if(!aacId._id) {%>
          <h5>Cadastro de atividade complementar</h5>
        <%} else {%>
          <h5>Edição de atividade complementar</h5>
        <%}%>
        <p>
          Lorem ipsum a iaculis purus curae mi est habitasse nam auctor sed, class luctus feugiat sociosqu nulla est
          accumsan ac nullam scelerisque. netus nullam accumsan imperdiet sit suscipit rhoncus accumsan, mi velit platea
          urna tristiq.
        </p>

            <%if(aacId._id) {%>
              <form class="signup-form" action="/aac/edit/<%= aacId._id %>" method="POST">
            <%} else {%>
              <form class="signup-form" action="/home/aac" method="POST">
            <%}%>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <input type="text" value="<%= aacId.atividade %>" placeholder="Atividade" class="form-control" id="atividade" name="atividade">
          </div>
            
          <div class="form-group set-margin">
            <%if(aacId._id) {%>
            <small class="form-text text-muted change-activity">Por favor, selecione a modalidade:</small>
            <%}%>
            <div class="form-row">
              <div class="col">
                <select class="form-control" placeholder="Modalidade" id="modalidade" name="modalidade">
                  <option selected>Ensino</option>
                  <option>Pesquisa</option>
                  <option>Extensão</option>
                </select>
              </div>
              <div class="col">
                <input type="text" value="<%= aacId.cargaLimite %>" placeholder="Carga Limite" class="form-control" id="cargaLimite" name="cargaLimite">
              </div>
            </div>
          </div>
          <span class="buttons-action set-margin">
            <button type="button" class="btn left-button">
              <a href="/aac">Cancelar</a>
            </button>
            
            <%if(aacId._id) {%>
              <button type="submit" class="btn right-button">
                Atualizar
              </button>
            <%} else {%>
              <button type="submit" class="btn right-button">
                Cadastrar
              </button>
            <%}%>
          </span>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
