    }

    /* ENVIO DE SOLICITAÇÃO */
    .envio-form .envio-group{
      margin-bottom: 20px;
    }
    .envio-form .set-margin .custom-file-label{
      text-align: left;
      font-size: 14px;
      color: #494949;
      height: 100%;
      padding: 8px 10px;
    }
    .envio-form .set-margin .input-group-prepend .input-group-text{
      font-size: 14px;
    }
    .pendingSec, .pendingCoo, .editing, .approved {
      border-radius: 10px;
      background-color: #f7f7f7 !important;
      height: 13px;
    }
    .pendingCoo .progress-bar{
      border-radius: 10px;
      background-color: #f1ac44;
      width: 50%;
    }
    .pendingSec .progress-bar {
      width: 75%;
      border-radius: 10px;
      background-color: #f1ac44;
    }
    .editing .progress-bar {
      border-radius: 10px;
      width: 25%;
      background-color: #E06A6A;
    }
    .approved .progress-bar {
      border-radius: 10px;
      width: 100%;
      background-color: #9CCCB2;
    }
    .pendingCoo, .pendingSec {
      border: 1px solid #f1ac44;
    }
    .editing {
      border: 1px solid #E06A6A;
    }
    .priority-high, .priority-high:hover, .priority-high:focus{
      color: #E06A6A;
    }
    .approved {
      border: 1px solid #9CCCB2;
    }
    .upload {
      border: 1px solid #ced4da;
      border-radius: 0px 4px 4px 0px;
      font-size: 14px;
      padding: .375rem .75rem;
    }
    .change-activity {
      text-align: left;
      cursor: default;
      margin-bottom: 5px;
      color: #1CA392 !important;
    }
    .insert-link {
      width: 100%;
      text-align: left;
      font-style: italic;
    }
    .insert-link a {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .deny-btn {
      border-radius: 30px;
      width: 135px;
      padding: 5px 15px;
      font-size: 14px;
      color: white;
      font-weight: 600;
    }
    .deny-btn:hover {
      color: white;
    }
    .deny-btn.ajuste {
      background-color: #f1ac44;
      border-color: #f1ac44;
    }
    .deny-btn.solicitar {
      background-color: #1ca392;
      border-color: #1ca392;
    }
    .change-upload {
      margin-top: -55px;
      text-align: left;
      margin-bottom: 60px;
      cursor: pointer;
      text-decoration: underline;
      color: #1CA392;
    }
    .status-approved {
      cursor: default;
      color: #9CCCB2 !important;
    }
    .need-edition {
      color: #f1ac44 !important;
    }
  </style>
  <script>
    function setModalidade(ev, be) {
      const select = document.getElementById('atividade');
      const optionSelected = select.options[select.selectedIndex].value;

      const a = be.find(a => a.atividade === optionSelected);
      document.getElementById('modalidade').setAttribute('value', a.modalidade); 
    }

    function changeActivity() {
      document.getElementById('atividade').style.display = "block";
      document.getElementById('atividadeSet').style.display = "none";

      document.getElementById('change').style.display = "none";
      document.getElementById('cancel').style.display = "block";
    }
    function setActivity() {
      document.getElementById('atividade').style.display = "none";
      document.getElementById('atividadeSet').style.display = "block";

      document.getElementById('cancel').style.display = "none";
      document.getElementById('change').style.display = "block";
    }

    function changeUpload() {
      document.getElementById('file').style.display = "block";
      document.getElementById('labelInput').style.display = "block";
      document.getElementById('setUpload').style.display = "none";

      document.getElementById('changeUp').style.display = "none";
      document.getElementById('cancelUp').style.display = "block";
    }
    function setUpload() {
      document.getElementById('file').style.display = "none";
      document.getElementById('labelInput').style.display = "none";
      document.getElementById('setUpload').style.display = "block";

      document.getElementById('cancelUp').style.display = "none";
      document.getElementById('changeUp').style.display = "block";
    }


    function envioNegado() {
      const denyValue = document.getElementById('reasonToDeny');
      console.log('denyValue type', document.getElementById('change-type').type);
      console.log('denyValue value', denyValue.value);
      console.log('denyValue length', denyValue.value.length);

      if (denyValue.value.length > 0) {
        document.getElementById('change-type').type = "submit";
        document.getElementById('alert-deny').style.display = "none";
      } else {
        document.getElementById('alert-deny').style.display = "block";
      }
    }

    async function getFile() {
       //File
      const fileInput = document.getElementById('file');
      const fileName = fileInput.files[0].name;
      const fileLabel = document.getElementById("labelInput");
      fileLabel.innerHTML = fileName;
    
      //File Value
      const filePath = fileInput.value;

      console.log('filePath', filePath);

      // Allowing file type
      var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.pdf)$/i;

      // Function Validate
      if (!allowedExtensions.exec(filePath)) {
        document.getElementById('alert-file').style.display = "block";
        fileInput.value = '';
        fileLabel.innerHTML = 'Escolha o arquivo';
        return false;
      } else {
        document.getElementById('alert-file').style.display = "none";
        function getBase64(getFile, callback) {
          var reader = new FileReader();
          reader.readAsDataURL(getFile);
          reader.onload = function result(x) {
          var result = reader.result;
          callback(result);
          };
            reader.onerror = function (error) {
            console.log('Error: ', error);
          };
        }

        function handleResult(result) {
            var stringURL = result;
            var fileBase64 = document.getElementById('fileBase64');
            fileBase64.value = stringURL;
        };
        
        let getFile = document.querySelector('input[type=file]').files[0];

        await getBase64(getFile, handleResult);
      }
    }
  </script>
