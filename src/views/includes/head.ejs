  <title>AAC</title>
  <style type="text/css">
  
    /* SCROLLBAR */
    ::-webkit-scrollbar {
      width: 12px;
      background: #d8d7d7;
    }
    ::-webkit-scrollbar-thumb {
      -webkit-border-radius: 4px;
      border-radius: 4px;
      background: #c5c5c5;
      border: 1px solid #b3b3b3;
    }

    /* HEADER */
    .header {
      background: linear-gradient(270deg, #1CA392 0%, #9CCCB2 43.23%, #1CA392 92.71%), #FFFFFF;
      height: 85px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .header .nav-link {
      color: white;
    }
    .header .nav-link.active {
      font-weight: 600;
    }
    .logo {
      display: flex;
      align-items: center;
    }
    .logo .school {
      font-size: 80px;
      color: white;
    }
    .logo .text {
      color: white;
      font-size: 40px;
      padding: 0 30px;
      font-style: italic;
      font-weight: 900;
    }

    /* GENERAL */
    body {
      font-family: 'Open Sans', sans-serif;
      color: #494949;
      background-color: #f3f3f3;
    }
    .fluid-content {
      height: 100vh;
    }
    .disabled {
      color: #A8A8A8;
    }
    h5 {
      font-size: 19px;
      font-weight: 900;
    }
    p {
      font-size: 12px;
    }
    a, a:focus, a:hover {
      color: #494949;
      text-decoration: none;
    }
    .card .card-body {
      text-align: center;
    }
    .card {
      width: 700px;
      margin: 0 auto;
      justify-content: center;
      padding: 35px;
      box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.25);
      border: none;
      margin-bottom: 60px;
    }
    .card .card-body p{
      width: 500px;
      margin: 30px auto 60px;
    }
    .btn:focus {
      outline: none;
      box-shadow: none;
    }
    .content-header-breadcrumb {
      display: flex;
      justify-content: space-between;
    }
    .content-header-breadcrumb span {
      padding: 40px 0 10px;
      text-decoration: underline;
      margin-bottom: 1rem;
    }
    .content-header-breadcrumb span a{
      color: #1CA392;
      font-size: 16px;
    }
    ol.breadcrumb {
      background: transparent;
      padding: 40px 0 10px;
    }
    ol.breadcrumb .breadcrumb-item, ol.breadcrumb .breadcrumb-item.active, .table {
      color: #494949;
    }
    ol.breadcrumb .breadcrumb-item.active {
      font-weight: 600;
    }
    .alert {
      margin: 0 auto 1rem;
    }
    .buttons-action {
      display: flex;
      justify-content: space-between;
    }
    .buttons-action .btn.left-button {
      padding: 0;
      font-size: 11px;
      text-decoration: underline;
    }
    .buttons-action .btn.left-button a{
      color: #1CA392;
    }
    .buttons-action .btn.right-button {
      width: 150px;
      height: 35px;
      background-color: #1CA392;
      color: white;
      border-radius: 30px;
    }
    .card .form-control, .card .form-group, 
    .card .form-row, .card .input-group select,
    .input-group .input-group-append .input-group-text {
      font-size: 14px !important;
      height: 40px;
      color: #494949 !important;
    }
    .input-group select{
      cursor: pointer;
    }
    .full-screen {
      width: 80%;
      margin: 0 auto;
    }
    .full-screen .card {
      width: 100%;
    }
    .tiny {
      margin-bottom: 30px;
    }
    .tiny .text-muted{
      font-size: 10px;
      text-align: left;
      margin: 2px;
    }
    .table .thead-dark th {
      font-size: 14px;
    }
    .full-screen .card form{
      width: 35%;
      margin: 0 auto;
    }
    .set-margin {
      margin-bottom: 60px;
    }
    .table-hover tbody tr:hover {
      background-color: #DCECED;
      color: #494949;
    }
    .table-hover {
      margin-bottom: 0;
      padding-bottom: 1rem;
      font-size: 14px;
    }
    table tbody tr {
      background-color: white;
    }
    table.table tr td {
      vertical-align: middle;
    }
    table.table tr td.set-width {
      max-width: 180px;
    }
    table.table tr td.set-size {
      font-size: 12px;
    }
    .custom-file-label::after {
      display: none;
    }
    .card input.form-control:disabled {
      color: #A8A8A8 !important;
      background-color: transparent;
    }
    textarea {
      min-height: 90px;
    }


    /* LOGIN */
    .image-container {
      /* background: url(../assets/image/login-image.jpg) no-repeat; */
